{
    "description": "Sales Funnel Plugin â€” auto-validation hooks",
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "\"${CLAUDE_PLUGIN_ROOT}/scripts/mobile-check.sh\"",
                        "timeout": 15,
                        "statusMessage": "Validating mobile responsiveness..."
                    },
                    {
                        "type": "command",
                        "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/lighthouse-audit.js\"",
                        "async": true,
                        "timeout": 60,
                        "statusMessage": "Running Lighthouse audit (background)..."
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "node \"${CLAUDE_PLUGIN_ROOT}/scripts/validate-funnel-structure.js\"",
                        "timeout": 30,
                        "statusMessage": "Running final funnel validation..."
                    }
                ]
            }
        ]
    }
}